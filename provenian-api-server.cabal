    monad-control,
    io-streams,
    text,
    database-generic-mapper,
    mysql-simple,
    mysql,
    binary,
  hs-source-dirs:      src
  default-language:    Haskell2010
  default-extensions:
    DataKinds
    TypeOperators
    DeriveGeneric
    MultiParamTypeClasses
    TypeFamilies
    ExistentialQuantification
    GeneralizedNewtypeDeriving
    OverloadedStrings
    FlexibleContexts
    FlexibleInstances
